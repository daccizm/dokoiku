<% @shops.each do |shop| %>
  <% shop.notices.each do |notice| %>
    <hr/>
    <div class="row">
      <div class="span5">
  	    <p><font size="3" color="red"><%= shop.name %></font></p>
        <%= image_tag 'shioya.jpg', :width=>"100", :height=>"100", :align=>"left" %>
      </div>
    </div>
    <div class="row">
      <div class="span7">
        <%= notice.content %>
      </div>
    </div>
  <% end %>
<% end %>