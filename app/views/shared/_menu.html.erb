<div style="padding-top:30px">
  <p>フリーワード検索</p>
  <input type="text" class="input-medium search-query">
  <button type="submit" class="btn">検索</button>
</div>

<div style="padding-top:30px">
  <a href="#modal-category" data-toggle="modal" class="label bc">
    <span id="link-modal-genre-name">ジャンルを選択します</span>
    <span class="icon-circle-arrow-down"></span>
  </a>
</div>

<div id="modal-category" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="mdl_header_demand" aria-hidden="true">
  <div class="modal-header">
  	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="mdl_header_demand">ジャンルを選択します</h3>
  </div>
  <div class="modal-body">
	<a href="#modal-genresX" data-toggle="modal" class="label bc">全て</a>
    <% @categories.each do |category| %>
  	  <a href="#modal-genres<%= category.id %>" data-toggle="modal" class="label bc"><%= category.name %></a>
    <% end %>
  </div>
</div>

<% @categories.each do |category| %>
	<div id="modal-genres<%= category.id %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="mdl_header_demand" aria-hidden="true">
	  <div class="modal-header">
	  	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
	    <h3 id="mdl_header_demand"><%= category.name %></h3>
	  </div>
	  <div class="modal-body">
        <a class="label bc">全て</a>
	    <% category.genres.each do |genre| %>
          <%= link_to genre.name, shops_path, method: :get, remote: true, :class => 'label bc' %>
	    <% end %>
	  </div>
	</div>
<% end %>
